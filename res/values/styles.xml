<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- CheckBoxのスタイル -->
	<style
		name="ListCheckBox"
		parent="android:Widget.CompoundButton.CheckBox"
	>
		<item
			name="android:button"
		>@drawable/list_checkbox_stateful</item>
	</style>


	<!-- チェックリストのActivityのタイトルのスタイル -->
	<style
		name="CustomTitleTheme"
		parent="android:style/Theme"
	>
		<item
			name="android:windowTitleBackgroundStyle"
		>@style/WindowTitleBackground</item>

		<item
			name="android:windowTitleSize"
		>90dip</item>
	</style>


	<!-- チェックリストのActivityのタイトルのスタイル -->
	<style
		name="WindowTitleBackground"
	>
		<item
			name="android:background"
		>@drawable/check_list_title</item>
	</style>


	<style name="Theme.CustomDialog" parent="android:style/Theme.Dialog">
		<item name="android:windowBackground">@drawable/toastback</item>
	</style>


</resources>