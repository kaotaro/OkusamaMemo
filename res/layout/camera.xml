<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:orientation="horizontal"
	android:background="@color/beige"
>
	<FrameLayout
		android:id="@+id/FrameLayout01"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:layout_weight="1"
	>
		<LinearLayout
			android:id="@+id/LinearLayout02"
			android:gravity="center"
			android:layout_gravity="center"
			android:layout_height="230dip"
			android:layout_width="305dip"
			android:background="#ffffff"
		>
			<SurfaceView
				android:id="@+id/SurfaceView01"
				android:layout_height="225dip"
				android:layout_width="300dip"
				android:layout_gravity="center"
			></SurfaceView>
		</LinearLayout>
	</FrameLayout>
	<LinearLayout
		android:layout_height="fill_parent"
		android:layout_weight="0"
		android:id="@+id/shutterLayout"
		android:visibility="visible"
		android:gravity="center"
		android:background="@color/beige"
		android:layout_width="80dip"
	>
		<ImageButton
			android:id="@+id/shutter"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:background="@drawable/shutter_b_stateful"/>
	</LinearLayout>
	<LinearLayout
		android:layout_height="fill_parent"
		android:layout_weight="0"
		android:id="@+id/buttonViewLayout"
		android:visibility="gone"
		android:orientation="vertical"
		android:gravity="center"
		android:weightSum="3"
		android:background="@color/beige"
		android:layout_width="80dip">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center"
			android:layout_weight="1"
		>
			<ImageButton
				android:id="@+id/camera_ok"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/ok_b_stateful"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center"
			android:layout_weight="1"
		>
			<ImageButton
				android:id="@+id/camera_retake"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/camera_b_stateful"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center"
			android:layout_weight="1"
		>
			<ImageButton
				android:id="@+id/camera_cancel"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/close_b_stateful"/>
		</LinearLayout>
	</LinearLayout>
	<ImageView
		android:id="@+id/ImageView01"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/cam_logo"
	></ImageView>
</LinearLayout>